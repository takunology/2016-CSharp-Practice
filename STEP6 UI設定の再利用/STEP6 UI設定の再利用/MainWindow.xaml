<Window x:Class="STEP6_UI設定の再利用.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STEP6_UI設定の再利用"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="200">
    <Window.Resources>
        <SolidColorBrush x:Key="ButtonBrushKey" Color="Black" />
        <SolidColorBrush x:Key="BlackBrushKey" Color="Black" />
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="ButtonBrushKey" Color="Gray" />
        </Grid.Resources>

        <StackPanel>
            <Button Margin="10" Content="ボタン1" Background="{StaticResource BlackBrushKey}" />
            <Button Margin="10" Content="ボタン2" Background="{StaticResource ButtonBrushKey}" />
            <Button Margin="10" Content="ボタン3" >
                <Button.Resources>
                    <SolidColorBrush x:Key="WhiteBrushKey" Color=" White" />
                </Button.Resources>
                <Button.Background>
                    <StaticResource ResourceKey="WhiteBrushKey" />
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>
